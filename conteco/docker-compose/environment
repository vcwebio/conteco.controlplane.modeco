#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_SERVICES='controlplane.modeco'
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_CONTROLPLANE_NAME,$CONTECO_DC_CONTROLPLANE_ENVIRONMENT,$CONTECO_DC_CONTROLPLANE_COMMAND,$CONTECO_DC_CONTROLPLANE_VOLUMES,$CONTECO_DC_CONTROLPLANE_NETWORKS,$CONTECO_DC_CONTROLPLANE_PORTS,$CONTECO_DC_CONTROLPLANE_DEPLOY_MODE,$CONTECO_DC_CONTROLPLANE_DEPLOY_REPLICAS,$CONTECO_DC_CONTROLPLANE_DEPLOY_RESOURCES_LIMITS_CPUS,$CONTECO_DC_CONTROLPLANE_DEPLOY_RESOURCES_RESERVATIONS_CPUS,$CONTECO_DC_CONTROLPLANE_DEPLOY_RESOURCES_LIMITS_MEMORY,$CONTECO_DC_CONTROLPLANE_DEPLOY_RESOURCES_RESERVATIONS_MEMORY'
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_CONTROLPLANE_ENVIRONMENT=
export CONTECO_DC_CONTROLPLANE_COMMAND="'usleep 500000000'"
export CONTECO_DC_CONTROLPLANE_PORTS=
export CONTECO_DC_CONTROLPLANE_VOLUMES=
export CONTECO_DC_CONTROLPLANE_NETWORKS=
export CONTECO_DC_CONTROLPLANE_DEPLOY_MODE="replicated"
export CONTECO_DC_CONTROLPLANE_DEPLOY_REPLICAS="1"
export CONTECO_DC_CONTROLPLANE_DEPLOY_RESOURCES_LIMITS_CPUS="0.75"
export CONTECO_DC_CONTROLPLANE_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.0"
export CONTECO_DC_CONTROLPLANE_DEPLOY_RESOURCES_LIMITS_MEMORY="128m"
export CONTECO_DC_CONTROLPLANE_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="5m"
# END GLOBAL SETTINGS

# START SETTINGS controlplane.modeco
# END SETTINGS controlplane.modeco

# START TOPLEVEL SETTINGS
export CONTECO_DC_GLOBAL_VOLUMES=
export CONTECO_DC_GLOBAL_NETWORKS=
# END TOPLEVEL SETTINGS
