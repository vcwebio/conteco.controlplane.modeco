#!/usr/bin/env bash
if [[ "$1" == "for-each-node" ]] ; then
(
	shift
    . executionplane-invoke "$0 $@"
	if [[ $# -gt 1 ]] ; then
		method=$1
		if [[ " all image " != *"$method"* ]] ; then
			method="image"
		else
			shift
		fi
	else
		method="image"
	fi
	imageName="${CONTECO_REALM}/${CONTECO_ECOSYSTEM}.${CONTECO_TYPE}.${CONTECO_NAME}"
	case $method in
        "image")
			action="$1"
			if [[ " --boot --start --pause --stop --shutdown " != *"$action"* ]] ; then
				action="--boot"
			fi
			if [[ "$action" == "--boot" ]] ; then
				executionplane-error "Method $action not implemented!"
			elif [[ "$action" != "--start" ]] ; then
				executionplane-error "Method $action not implemented!"
			elif [[ "$action" != "--pause" ]] ; then
				executionplane-error "Method $action not implemented!"
			elif [[ "$action" != "--stop" ]] ; then
				executionplane-error "Method $action not implemented!"
			elif [[ "$action" != "--shutdown" ]] ; then
				executionplane-error "Method $action not implemented!"
			fi
			;;
		all)
			extract-and-execute $imageName run $@
			;;
	esac
    executionplane-complete
)
else
    export PATH="$CONTECO_EXECUTIONPLANE_APIINTERNALPATH"
	for-each $(basename $0) $@
fi
