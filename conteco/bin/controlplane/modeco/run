#!/usr/bin/env bash
if [[ "$1" == "for-each-node" ]] ; then
(
	shift
    . executionplane-invoke "$0 $@"
	command=$1
	shift
	rootPath="/conteco/pwd/${BASH_ARGV[0]}/modeco"
	. $rootPath/settings
	if [[ $# -gt 1 ]] ; then
		stackName="$1"
	else
		stackName="all"
	fi
	case $command in
		boot)
			bootStacks="${CONTECO_DC_GLOBAL_BOOTSTACKS}"
			IFS=',' read -r -a stacks <<< "$bootStacks"
			for stack in ${stacks[@]};
			do
				if [[ " all $stack "  == *"$stackName"* ]] ; then
					deploy "for-each-node" $stack up "${BASH_ARGV[0]}"
				fi
				done;
			;;
		pause)
			executionplane-error "Method not implemented: ${CONTECO_NAME} $(basename $0)."
			;;
			reboot)
				run "for-each-node" shutdown $@
				run "for-each-node" boot $@
				;;
			restart)
				run "for-each-node" stop $@
				run "for-each-node" start $@
				;;
		resume)
			executionplane-error "Method not implemented: ${CONTECO_NAME} $(basename $0)."
			;;
		shutdown)
			bootStacks="${CONTECO_DC_GLOBAL_BOOTSTACKS}"
			IFS=',' read -r -a stacks <<< "$bootStacks"
			for stack in ${stacks[@]};
			do
				if [[ " all $stack "  == *"$stackName"* ]] ; then
					deploy "for-each-node" $stack down "${BASH_ARGV[0]}"
				fi
				done;
			;;
		start)
			runStacks="${CONTECO_DC_GLOBAL_RUNSTACKS}"
			IFS=',' read -r -a stacks <<< "$runStacks"
			for stack in ${stacks[@]};
			do
				if [[ " all $stack "  == *"$stackName"* ]] ; then
					deploy "for-each-node" $stack up "${BASH_ARGV[0]}"
				fi
				done;
			;;
		stop)
			runStacks="${CONTECO_DC_GLOBAL_RUNSTACKS}"
			IFS=',' read -r -a stacks <<< "$runStacks"
			for stack in ${stacks[@]};
			do
				if [[ " all $stack "  == *"$stackName"* ]] ; then
					deploy "for-each-node" $stack down "${BASH_ARGV[0]}"
				fi
				done;
			;;
		*)
			executionplane-error "Method not implemented: ${CONTECO_NAME} $(basename $0)."
			;;
	esac
    executionplane-complete
)
else
    export PATH="$CONTECO_EXECUTIONPLANE_APIINTERNALPATH_MODECO"
	for-each $(basename $0) $@
fi
