#!/usr/bin/env bash
if [[ "$1" == "for-each-node" ]] ; then
(
	shift
    . executionplane-invoke "$0 $@"
	if [[ $# -gt 1 ]] ; then
		method=$1
		if [[ " all image " != *"$method"* ]] ; then
			method="image"
		else
			shift
		fi
	else
		method="image"
	fi
	if [[ $# -gt 1 ]] ; then
		rootPath="${CONTECO_PWD}/${BASH_ARGV[0]}"
	else
		rootPath="${CONTECO_PWD}/$1"
	fi
	imageName="${CONTECO_REALM}/${CONTECO_ECOSYSTEM}.${CONTECO_TYPE}.${CONTECO_NAME}"
	case $method in
		image)
			case $1 in
				build)
					.base $@
					;;
				deploy)
					extract-and-execute $imageName config $@
					;;
				increment)
					.base $@
					;;
				remove-crs)
					.base $@
					;;
				set-version)
					.base $@
					;;
				stack)
					extract-and-execute $imageName config $@
					;;
				*)
					executionplane-error "Method not recognised: $1."
					;;
			esac
			;;
        all)
			extract-and-execute $imageName config $@
            ;;
	esac
    executionplane-complete
)
else
    export PATH="$CONTECO_EXECUTIONPLANE_APIINTERNALPATH_MODECO"
	for-each $(basename $0) $@
fi
