#!/usr/bin/env bash
(
	volumeName=$1
	rootPath=$2
	. $rootPath/modeco/settings
	IFS=',' read -r -a volumes <<< "${MODECO_DC_GLOBAL_VOLUMES_INITIALISED}"
	for volumeSettings in ${volumes[@]};
	do
		volumeName=$(echo $volumeSettings | cut -d':' -f 1) 
		volumeDir=$(echo $volumeSettings | cut -d':' -f 2) 
		if [[ " all $volume "  == *"$volumeName"* ]] ; then
			echo "docker run -v swarm_base_ss_processor_modeco_ss-processor_volume:/data -v /c/conteco/pwd/vcwebio/modeco.swarm.base/modeco/volumes:/backup vcwebio/conteco.image.base --interactive tar cvf /backup/swarm_base_ss_processor_modeco_ss-processor_volume.tar /data"
			echo "docker run -v $volume"
		fi
		done;
)
