#!/usr/bin/env bash
(
	volume=$1
	rootPath=$2
	. $rootPath/modeco/settings
	#rootPath=${CONTECO_PWD_VOLUME}/${CONTECO_REALM}/${CONTECO_ECOSYSTEM}.${CONTECO_TYPE}.${CONTECO_NAME}
	volumePrefix=$(echo "${CONTECO_TYPE}" | tr '.-' '_')
	imageName="${CONTECO_REALM}/${CONTECO_ECOSYSTEM}.${CONTECO_TYPE}.${CONTECO_NAME}"
	IFS=',' read -r -a volumes <<< "${CONTECO_DC_GLOBAL_VOLUME_INITIALISED}"
	for volumeSettings in ${volumes[@]};
	do
		volumeName=$(echo $volumeSettings | cut -d':' -f 1)
		volumeDir=$(echo $volumeSettings | cut -d':' -f 2)
		if [[ " all $volumeName "  == *"$volume"* ]] ; then
#			executionplane --silent docker run -v ${volumePrefix}_${volumeName}:${volumeDir} -v ${CONTECO_PWD_VOLUME}/${CONTECO_REALM}/${CONTECO_ECOSYSTEM}.${CONTECO_TYPE}.${CONTECO_NAME}/modeco/volumes:/backup ${CONTECO_REALM}/${CONTECO_ECOSYSTEM}.${CONTECO_TYPE}.${CONTECO_NAME} --interactive tar cvf /backup/${volumeName}.tar ${volumeDir}
			executionplane --silent docker run -v ${volumeSettings} -v ${rootPath}/modeco/volumes:/backup ${imageName} --interactive tar cvf /backup/${volumeName}.tar ${volumeDir}
		fi
	done;
)
