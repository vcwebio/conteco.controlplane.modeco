#!/usr/bin/env bash
(
	volume=$1
	rootPath=$2
	. $rootPath/modeco/settings
	volumePrefix=$(echo "${CONTECO_TYPE}" | tr '.-' '_')
	imageName="${CONTECO_REGISTRY}${CONTECO_REALM_RUNTIME}/${CONTECO_ECOSYSTEM_RUNTIME}.${CONTECO_TYPE}.${CONTECO_NAME}"
	IFS=',' read -r -a volumes <<< "${CONTECO_DC_GLOBAL_VOLUME_INITIALISED}"
	for volumeSettings in ${volumes[@]};
	do
		volumeName=$(echo $volumeSettings | cut -d':' -f 1)
		volumeDir=$(echo $volumeSettings | cut -d':' -f 2)
		if [[ " all $volumeName "  == *"$volume"* ]] ; then
			executionplane --silent docker run -v ${volumePrefix}_${volumeSettings} -v controlplane_repos:/conteco/pwd ${imageName} --interactive tar cvf ${rootPath}/modeco/volumes/${volumeName}.tar ${volumeDir}
		fi
	done;
)
