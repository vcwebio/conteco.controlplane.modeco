#!/usr/bin/env bash
imageName="$1"
rootPath="$2"
script="$3"
shift
shift
shift
scriptPath="$rootPath/scripts/$script"
executionplane-info "Script Path: $scriptPath"

if [[ -f $scriptPath ]] ; then
	. invoke-script $imageName environment
else
	executionplane-error "$script: The script does not exist."
fi
